<div class='row justify-content-center'>
  <div class="col-12 col-sm-6">
    <%= simple_form_for @pet do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :species, collection: Pet::SPECIES %>
      <%= f.input :found_on %>
      <%= f.submit class: 'btn btn-primary w-100 mt-3' %>
    <% end %>
  </div>
</div>
